{
  "name": "automatic-screenshot-app",
  "version": "1.0.0",
  "description": "An Electron app that automatically captures screenshots at user-defined intervals",
  "icon": "assets/icon.png",
  "main": "main.js",
  "author": "Thales Broussard",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "bootstrap": "^5.3.5",
    "electron-updater": "^6.6.2",
    "screenshot-desktop": "^1.14.0"
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thalesbros/Automatic-Screenshot-App.git"
  },
  "build": {
    "appId": "com.thalesbroussard.automatic-screenshot-app",
    "productName": "Automatic Screenshot App",
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
